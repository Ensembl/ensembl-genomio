{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://.../.../meta/schemas/v0.0.0/genome_schema.json",
  "description" : "JSON schema for exchanging meta information for genomes",

  "definitions" : {
    "species_info": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "taxonomy_id" : { "type" : "integer" },
        "production_name" : { "type" : "string" },
        "scientific_name" : { "type" : "string" },
        "strain" : { "type" : "string" },
        "display_name" : { "type" : "string" },
        "division" : { "type" : "string" },
        "alias" : {
          "oneOf" : [
            { "type" : "string" },
            { "type" : "array", "items" : { "type" : "string" } }
          ]
        }
      },
      "required": [
        "taxonomy_id"
        ]
    },
    "assembly_info": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "accession" : {
          "type" : "string",
          "pattern" : "^[A-Z]+_?[0-9]+(\\.[0-9]+)?$",
          "description" : "Unique INSDC accession for the genome"
        },
        "chromosome_display_order" : {
          "type" : "array",
          "items" : { "type" : "string" },
          "description" : "if present, only the listed chromosomes will be be displayed"
        },
        "date" : { "type" : "string" },
        "name" : { "type" : "string", "pattern" : "^[A-Za-z0-9]+$" },
        "version" : {"type" : "integer" }
      },
      "required": [
        "accession",
        "version"
      ]
    },
    "genebuild_info": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "version" : { "type" : "string" },
        "method" : { "type" : "string" },
        "start_date" : { "type" : "string" }
      },
      "required": [
        "version"
        ]
    },
    "provider_info": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name" : { "type" : "string" },
        "url" : { "type" : "string" }
      },
      "required": [
        "name"
        ]
    },

    "genome_info" : {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "species" : { "$ref" : "#/definitions/species_info" },
        "assembly" : { "$ref" : "#/definitions/assembly_info" },
        "genebuild" : { "$ref" : "#/definitions/genebuild_info" },
        "provider" : { "$ref" : "#/definitions/provider_info" }
      },
      "required" : [
        "species"
        ]
    }
  },

  "oneOf" : [
  { "$ref" : "#/definitions/genome_info" }
  ],

    "examples": [
    { "taxonomy_id": 180454 }
  ]
}

